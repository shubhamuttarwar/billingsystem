<div class = "container">

<h1>Categories</h1>

<%= link_to 'New Category', new_category_path,class: 'btn btn-info btn-lg' %>
<p><br></p>
	
<table class = "table">
	<thead>
	<tr>
		<th>Category Name</th>
		<th colspan="3"></th>
	</tr>
</thead>

<% @category.each do |cat| %>
<tr>
	<td><%= cat.categoryname %></td>
	<td><%= link_to 'Show', category_path(cat),class: 'btn btn-info btn-sm' %></td>
	<td><%= link_to 'Edit', edit_category_path(cat),class: 'btn btn-success btn-sm' %></td>
	<td><%= link_to 'Destroy', category_path(cat), method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-sm' %></td>
</tr>
<% end %>
</table>
</div>