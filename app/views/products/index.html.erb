<div class = "container">

<h1>Products</h1>

<%= link_to 'New Product', new_product_path,class: 'btn btn-info btn-lg' %>
<p><br></p>
	
<table class = "table">
	<tr>
		<th>Product Code</th>
		<th>Product Category</th>
		<th>Product Name</th>
		<th>Price Per Unit</th>
		<th>SKU</th>
		<th colspan="3"></th>
	</tr>

<% @product.each do |cat| %>
<tr>
	<td><%= cat.code %></td>
	<td><%= cat.category.categoryname %></td>
	<td><%= cat.product_name %></td>
	<td><%= currency(cat.unit_price) %></td>
	<td><%= cat.sku %></td>
	<td><%= link_to 'Show', product_path(cat),class: 'btn btn-info btn-md' %></td>
	<td><%= link_to 'Edit', edit_product_path(cat),class: 'btn btn-success btn-md' %></td>
	<td><%= link_to 'Destroy', product_path(cat), method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-md' %></td>
</tr>
<% end %>
</table>
</div>