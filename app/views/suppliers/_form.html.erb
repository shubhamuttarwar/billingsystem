
<%= render 'shared/errors', obj: @supplier %>
<div class = 'row'>
  <div class = 'col-xs-12'>
      <%= form_for(@supplier, local: true, :html => {class: "form-horizontal", role: "form"}) do |form| %>

      <div class = "form-group">
        <div class = "control-label col-sm-2">
          <%= form.label :FirstName %>
        </div>
        <div class = "col-sm-6">
           <%= form.text_field :firstname, class: "form-control", placeholder: "First Name", autofocus: true %>
        </div>
      </div>

      <div class = "form-group">
        <div class = "col-sm-2 control-label">
          <%= form.label :lastname %>
        </div>
        <div class = "col-sm-6">
           <%= form.text_field :lastname, class: "form-control", placeholder: "Last Name", autofocus: true %>
        </div>
      </div>
      
      <div class = "form-group">
        <div class = "col-sm-2 control-label">
            <%= form.label :phone %>
        </div>
        <div class = "col-sm-6">
            <%= form.text_field :phone, class: "form-control", placeholder: "Enter 10 digit phone" %>
        </div>
      </div>

      <div class = "form-group">
        <div class = "col-sm-2 control-label">
            <%= form.label :address %>
        </div>
        <div class = "col-sm-6">
            <%= form.text_area :address, class: "form-control",rows: 5, placeholder: "Enter Address"  %>
        </div>
      </div>
      
      
      <div class = "form-group">
        <div class = "col-sm-offset-2 col-sm-10">
          <%= form.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
 
<% end %>
</div>
</div>